<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_low">

    <TextView
        android:id="@+id/title_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_high"
        android:layout_marginTop="@dimen/padding_high"
        android:gravity="center"
        android:textSize="@dimen/text_size_high"
        android:textStyle="bold"
        tools:text="More than 10000 steps goal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/description_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_med"
        android:layout_marginTop="@dimen/padding_med"
        android:gravity="start"
        android:textSize="@dimen/text_size_medium"
        tools:text="Are you capable of walk more than 10000 today?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_med"
        android:layout_marginTop="@dimen/padding_med"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_low"
            tools:text="Steps" />

        <ProgressBar
            android:id="@+id/progress_detail"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_low"
            tools:progress="45" />

    </LinearLayout>

    <TextView
        android:id="@+id/more_info_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_med"
        android:layout_marginTop="@dimen/padding_med"
        android:gravity="start"
        android:textSize="@dimen/text_size_medium"
        tools:text="You walked about 45% of the total, come man, you can do it" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

</LinearLayout>